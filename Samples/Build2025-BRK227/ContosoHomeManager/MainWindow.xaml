<Window
    x:Class="ContosoHomeManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContosoHomeManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ContosoHomeManager.Models"
    Title="Contoso SmartHome Manager"
    Width="1320"
    Height="600"
    Icon="Icon.ico"
    ResizeMode="CanResize"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="contentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="480" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  SETTINGS  -->
            <Border
                Margin="12"
                Padding="16"
                Style="{StaticResource CardBackgroundStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical">

                        <Image Width="128" Source="/Assets/ContosoSmartHub.png" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Text="Contoso SmartHub V1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="v1.0.2.0" />

                        <Button
                            Margin="0,12,0,24"
                            HorizontalAlignment="Center"
                            Content="Search for updates"
                            Style="{DynamicResource AccentButtonStyle}" />

                        <Rectangle
                            Height="1"
                            Margin="-16,0,-16,24"
                            HorizontalAlignment="Stretch"
                            Fill="{DynamicResource DividerStrokeColorDefaultBrush}" />

                        <TextBlock FontWeight="SemiBold" Text="Settings" />
                        <CheckBox
                            Margin="0,12,0,0"
                            Content="Discoverability mode"
                            IsChecked="True" />

                        <CheckBox
                            Margin="0,8,0,0"
                            Content="Device access"
                            IsChecked="True" />

                        <TextBlock Margin="0,12,0,0" Text="Notifications volume" />
                        <Slider
                            Maximum="10"
                            Minimum="0"
                            Value="8" />

                        <Expander
                            Grid.Row="1"
                            Margin="0,12,0,0"
                            VerticalAlignment="Top"
                            Header="Advanced">
                            <Expander.Content>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Margin="0,0,0,8" Text="Device name" />
                                    <TextBox Text="{Binding Title}" />
                                    <TextBlock Margin="0,12,0,8" Text="Port" />
                                    <TextBox Text="7000" />
                                    <TextBlock Margin="0,12,0,0" Text="Security level" />
                                    <Slider
                                        HorizontalAlignment="Stretch"
                                        Maximum="10"
                                        Minimum="0"
                                        Value="3" />
                                    <CheckBox Margin="0,8,0,0" Content="Turn off after 5 min of inactive use" />
                                    <TextBlock Margin="0,12,0,8" Text="Startup mode" />
                                    <ComboBox SelectedIndex="1">
                                        <ComboBoxItem>Photo</ComboBoxItem>
                                        <ComboBoxItem>Video</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  PICTURES  -->
            <Border
                Grid.Column="1"
                Margin="4,12,12,12"
                Padding="16,16,0,16"
                Style="{StaticResource CardBackgroundStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        FontSize="18"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Camera's" />
                    <ListView
                        x:Name="RoomsListView"
                        Grid.Row="1"
                        Margin="-16,12,0,0"
                        BorderBrush="Transparent"
                        ItemsSource="{Binding RoomsCollection, Mode=OneWay}"
                        PreviewMouseLeftButtonUp="listView_Click"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectionMode="Single">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="models:Room">
                                <Border
                                    Width="240"
                                    Height="240"
                                    Margin="-4,12,-4,12"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource OverlayCornerRadius}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Border Width="240" CornerRadius="8,8,0,0">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Image}" />
                                            </Border.Background>
                                        </Border>
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="12,12,12,4"
                                            FontWeight="SemiBold"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Margin="12,0,12,12"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                            Text="{Binding Description}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>