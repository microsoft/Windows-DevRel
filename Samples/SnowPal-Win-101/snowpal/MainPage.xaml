<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SnowPal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnowPal.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:IncorrectGuessesToImageConverter x:Key="IncorrectGuessesToImageConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions> 
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="SnowPal" Style="{StaticResource TitleTextBlockStyle}" Grid.ColumnSpan="2"/>

        <!-- Hangman Drawing -->
        <Image x:Name="hangmanImage" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,10,10" Source="{Binding IncorrectGuesses, Converter={StaticResource IncorrectGuessesToImageConverter}}"/>

        <!-- Guesses Left Display -->
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Guesses Left: " Style="{StaticResource GuessesLeftTextBlockStyle}"/>
            <TextBlock Text="{Binding GuessesLeft, Mode=OneWay}" Style="{StaticResource GuessesLeftTextBlockStyle}"/>
        </StackPanel>

        <!-- Alphabet Buttons -->
        <GridView x:Name="AlphabetButtonsGridView" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,50,10,10" Loaded="Grid_Loaded" KeyUp="Grid_KeyUp"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Button Content="{x:Bind}" Style="{StaticResource AlphabetButtonStyle}" Click="OnLetterButtonClick"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <!-- Word Display Area -->
        <TextBlock x:Name="Word" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding WordDisplay, Mode=OneWay}" Style="{StaticResource WordDisplayTextBlockStyle}"/>

        <!-- ContentDialog for messages -->
        <ContentDialog x:Name="MessageDialog" CloseButtonText="OK"/>
    </Grid>
</Page>
